{
    "files.exclude": {
        ".vs/": true,
        "out/": true,
        "reports/": true,
        "**/bin/": true,
        "**/obj/": true,
        "TestResults/": true
    },
    "search.exclude": {
        "out/": true
    },
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "yaml.format.singleQuote": true,
    "yaml.schemas": {
        "./schemas/PSRule-options.schema.json": [
            "/tests/PSRule.Tests/PSRule.*.yml",
            "/docs/scenarios/*/ps-rule.yaml"
        ],
        "./schemas/PSRule-language.schema.json": [
            "/tests/PSRule.Tests/**.Rule.yaml",
            "/docs/scenarios/*/*.Rule.yaml"
        ]
    },
    "[yaml]": {
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 4,
        "editor.tabCompletion": "on",
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace",
        "gitlens.codeLens.scopes": [
            "document"
        ]
    },
    "files.associations": {
        "**/.azure-pipelines/*.yaml": "azure-pipelines",
        "**/.azure-pipelines/jobs/*.yaml": "azure-pipelines"
    },
    "cSpell.words": [
        "APPSERVICEMININSTANCECOUNT",
        "Gitter",
        "Kubernetes",
        "cmdlet",
        "cmdlets",
        "deserialize",
        "deserialized",
        "deserializes",
        "hashtable",
        "proxied",
        "runspace",
        "runspaces",
        "unencrypted"
    ]
}
