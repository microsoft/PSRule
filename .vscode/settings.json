{
  "files.exclude": {
    ".vs/": true,
    "out/": true,
    "**/bin/": true,
    "**/obj/": true,
    "TestResults/": true
  },
  "search.exclude": {
    "out/": true,
    "reports/": true
  },
  "files.insertFinalNewline": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "yaml.format.singleQuote": true,
  "yaml.format.bracketSpacing": true,
  "yaml.format.enable": true,
  "yaml.schemas": {
    "./schemas/PSRule-options.schema.json": [
      "/tests/PSRule.Tests/PSRule.*.yml",
      "/docs/scenarios/*/ps-rule.yaml",
      "/ps-rule.yaml"
    ],
    "./schemas/PSRule-language.schema.json": [
      "/**/**.Rule.yaml",
      "/**/docs/scenarios/baselines/Baseline.rule.yaml"
    ]
  },
  "json.schemas": [
    {
      "fileMatch": [
        "/**/**.Rule.jsonc"
      ],
      "url": "./schemas/PSRule-resources.schema.json"
    },
    {
      "fileMatch": [
        "/**/ps-rule.lock.json"
      ],
      "url": "./schemas/PSRule-lock.schema.json"
    }
  ],
  "[json]": {
    "editor.tabCompletion": "on",
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "gitlens.codeLens.scopes": [
      "document"
    ]
  },
  "[jsonc]": {
    "editor.tabCompletion": "on",
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "gitlens.codeLens.scopes": [
      "document"
    ]
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "[powershell]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 4
  },
  "[html]": {
    "editor.formatOnSave": false,
  },
  "[xml]": {
    "editor.formatOnSave": false,
  },
  "files.associations": {
    "**/.azure-pipelines/*.yaml": "azure-pipelines",
    "**/.azure-pipelines/jobs/*.yaml": "azure-pipelines",
    "**/NuGet.config": "xml"
  },
  "cSpell.words": [
    "APPSERVICEMININSTANCECOUNT",
    "CLIXML",
    "cmdlet",
    "cmdlets",
    "codeql",
    "concat",
    "datetime",
    "deserialize",
    "deserialized",
    "deserializes",
    "Gitter",
    "hashtable",
    "Kubernetes",
    "Newtonsoft",
    "NOTCOUNT",
    "proxied",
    "PSRULE",
    "pwsh",
    "quickstart",
    "runspace",
    "runspaces",
    "SARIF",
    "SBOM",
    "subselector",
    "unencrypted",
    "xunit"
  ],
  "[csharp]": {
    "editor.tabSize": 4
  },
  "omnisharp.organizeImportsOnFormat": true,
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.enableRoslynAnalyzers": true,
  "git.branchProtection": [
    "main",
    "release/*"
  ],
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true
}
