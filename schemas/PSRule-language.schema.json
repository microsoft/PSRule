{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "",
    "description": "",
    "oneOf": [
        {
            "$ref": "#/definitions/language"
        },
        {
            "$ref": "#/definitions/baseline"
        },
        {
            "$ref": "#/definitions/object-selector"
        }
    ],
    "definitions": {
        "language": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/definitions/baseline"
                    }
                ]
            }
        },
        "resource-metadata": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "title": "The name of the baseline."
                }
            }
        },
        "baseline": {
            "type": "object",
            "properties": {
                "kind": {
                    "type": "string",
                    "title": "Kind",
                    "description": "The type of PSRule object.",
                    "enum": [
                        "Baseline"
                    ]
                },
                "metadata": {
                    "type": "object",
                    "$ref": "#/definitions/resource-metadata"
                },
                "spec": {
                    "type": "object",
                    "$ref": "#/definitions/baseline-spec"
                }
            },
            "required": [
                "kind",
                "metadata",
                "spec"
            ]
        },
        "baseline-spec": {
            "type": "object",
            "title": "Baseline",
            "description": "A specification for a baseline.",
            "properties": {
                "configuration": {
                    "type": "object",
                    "title": "Configuration",
                    "description": "Baseline specific configuration options.",
                    "uniqueItems": true
                },
                "rules": {
                    "type": "object",
                    "properties": {
                        "ruleName": {
                            "oneOf": [
                                {
                                    "type": "object",
                                    "title": "Rules",
                                    "properties": {
                                        "include": {
                                            "type": "array",
                                            "title": "Include rules",
                                            "description": "The rules to include in the baseline.",
                                            "$ref": "#/definitions/rules"
                                        },
                                        "exclude": {
                                            "type": "array",
                                            "title": "Exclude rules",
                                            "description": "The rules to exclude from the baseline.",
                                            "$ref": "#/definitions/rules"
                                        }
                                    },
                                    "additionalProperties": false
                                },
                                {
                                    "type": "array",
                                    "title": "Include rules",
                                    "description": "The rules to include in the baseline.",
                                    "$ref": "#/definitions/rules"
                                }
                            ]
                        }
                    }
                }
            }
        },
        "rules": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        },
        "object-selector": {
            "type": "object",
            "properties": {
                "kind": {
                    "type": "string",
                    "enum": [
                        "ObjectSelector"
                    ]
                },
                "metadata": {
                    "type": "object",
                    "$ref": "#/definitions/resource-metadata"
                },
                "spec": {
                    "type": "object",
                    "$ref": "#/definitions/object-selector-spec"
                }
            },
            "required": [
                "kind",
                "metadata",
                "spec"
            ]
        },
        "object-selector-spec": {
            "type": "object",
            "properties": {
                "selector": {
                    "type": "object",
                    "$ref": "#/definitions/selector-expression"
                }
            }
        },
        "selector-expression": {
            "type": "object",
            "oneOf": [
                {
                    "$ref": "#/definitions/selector-allOf"
                },
                {
                    "$ref": "#/definitions/selector-anyOf"
                },
                {
                    "$ref": "#/definitions/selector-equals"
                },
                {
                    "$ref": "#/definitions/selector-not"
                }
            ]
        },
        "selector-allOf": {
            "type": "object",
            "properties": {
                "allOf": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/selector-expression"
                    }
                }
            },
            "required": [
                "allOf"
            ]
        },
        "selector-anyOf": {
            "type": "object",
            "properties": {
                "anyOf": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/selector-expression"
                    }
                }
            },
            "required": [
                "anyOf"
            ]
        },
        "selector-equals": {
            "type": "object",
            "properties": {
                "equals": {
                    "type": "object",
                    "properties": {
                        "field": {
                            "type": "string"
                        },
                        "value": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "field",
                        "value"
                    ]
                }
            },
            "required": [
                "equals"
            ]
        },
        "selector-not": {
            "type": "object",
            "properties": {
                "not": {
                    "type": "object",
                    "$ref": "#/definitions/selector-expression"
                }
            },
            "required": [
                "not"
            ]
        }
    }
}